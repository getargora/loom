<!doctype html>
<html lang="{{ _lang ?: 'en' }}" dir="{{ _lang in ['ar', 'ar_SA'] ? 'rtl' : 'ltr' }}"{% if screen_mode == 'dark' %} data-bs-theme="dark"{% endif %}{% if theme is not defined or theme is empty %} data-bs-theme-primary="purple"{% else %} data-bs-theme-primary="{{ theme }}"{% endif %}>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="A skeleton for a PHP application built on Slim Framework 4.">
    <meta name="author" content="Taras Kondratyuk">
    <meta name="theme-color" content="#5B099B">
    <title>Contact Validation | Loom</title>
    {% include 'partials/css.twig' %}
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
        <div class="container-xl">
                <a class="navbar-brand d-flex align-items-center" href=".">
                  <img src="{{ logoPath }}" class="img-fluid" style="height:32px;width:auto;" alt="Loom">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbar">
                    <ul class="navbar-nav ms-lg-auto text-center text-lg-start">
                        <li class="nav-item">
                            <a {{ is_current_url('index') ? 'class="nav-link active" aria-current="page"' : 'class="nav-link"' }} href="{{route('index')}}">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a {{ is_current_url('contact') ? 'class="nav-link active" aria-current="page"' : 'class="nav-link"' }} href="{{route('contact')}}">
                                Contact
                            </a>
                        </li>

                        <li class="nav-item d-none d-lg-block">
                            <span class="nav-link disabled px-2">|</span>
                        </li>

                        {% if auth.isLogin %}
                            <li class="nav-item">
                                <a {{ is_current_url('home') ? 'class="btn btn-primary me-2"' : 'class="btn btn-primary me-2"' }} href="{{route('home')}}">
                                    Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a {{ is_current_url('logout') ? 'class="btn btn-outline-primary"' : 'class="btn btn-outline-primary"' }} href="{{route('logout')}}">
                                    Logout
                                </a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a {{ is_current_url('login') ? 'class="btn btn-outline-primary me-2"' : 'class="btn btn-outline-primary me-2"' }} href="{{route('login')}}">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a {{ is_current_url('register') ? 'class="btn btn-primary"' : 'class="btn btn-primary"' }} href="{{route('register')}}">
                                    Register
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1 py-5">
        <div class="container-xl">
          <h1 class="display-5 fw-bold text-center mb-4">Contact Validation</h1>
          <p>This page confirms the accuracy of contact information for domain registrants, as required by ICANN regulations.</p>
            <div class="row">
                <article class="span12 data-block">
                    <div class="data-container">
                        <section>
                            {% if message is defined %}
                                {% if 'Error' in message %}
                                    <div class="alert alert-warning">{{ message|e }}</div>
                                {% else %}
                                    <div class="alert alert-info">{{ message|e }}</div>
                                {% endif %}
                            {% else %}
                                <div class="alert alert-warning">No validation token provided in the URL.</div>
                            {% endif %}
                        </section>
                    </div>
                </article>
            </div>
          
          <div class="text-center mt-5">
            <div class="alert alert-info alert-dismissible mt-4" role="alert">
               <div class="alert-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" /><path d="M12 9h.01" /><path d="M11 12h1v4h1" />        </svg>
               </div>
                 <h4 class="alert-title">To customize this page, copy <code>contact.twig</code> from <code>resources/views</code> to <code>contact.custom.twig</code> and edit the file as required.</h4>
                 <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
            </div>
          </div>
        </div>
    </main>

  <footer class="footer bg-white border-top shadow-sm py-3 mt-auto">
    <div class="container-xl d-flex flex-column flex-md-row align-items-center justify-content-center justify-content-md-between text-center text-md-start gap-2">
      <span class="text-muted">&copy; {{ 'now' | date('Y') }}. All rights reserved.</span>
      <div class="mt-2 mt-md-0">
        <a href="{{ route('terms') }}" class="text-muted me-3">Terms & Conditions</a>
        <a href="{{ route('privacy') }}" class="text-muted me-3">Privacy Policy</a>
        <a href="{{ route('reportabuse') }}" class="text-muted">Report Abuse</a>
      </div>
    </div>
  </footer>

  {% include 'partials/js.twig' %}
</body>
</html>