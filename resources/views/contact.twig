<!doctype html>
<html lang="{{ _lang ?: 'en' }}" dir="{{ _lang in ['ar', 'ar_SA'] ? 'rtl' : 'ltr' }}"{% if screen_mode == 'dark' %} data-bs-theme="dark"{% endif %}{% if theme is not defined or theme is empty %} data-bs-theme-primary="purple"{% else %} data-bs-theme-primary="{{ theme }}"{% endif %}>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="A skeleton for a PHP application built on Slim Framework 4.">
    <meta name="author" content="Taras Kondratyuk">
    <meta name="theme-color" content="#5B099B">
    <title>Contact | Loom</title>
    {% include 'partials/css.twig' %}
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
    {% include 'partials/index-header.twig' %}

    <main class="flex-grow-1 py-5">
        <div class="container-xl">
          <h1 class="display-5 fw-bold text-center mb-4">Contact</h1>
            <div class="row g-4">
              <div class="col-12">
                <div class="card shadow-sm">
                  <div class="card-body p-4">
                    <h4 class="card-title mb-3">Contact</h4>
                    <p class="text-muted mb-4">Get in touch for sales, support, billing, transfers, and legal notices.</p>

                    <div class="row g-3">
                      <div class="col-12 col-md-6">
                        <div class="border rounded p-3 h-100">
                          <h6 class="mb-2">General Support</h6>
                          <ul class="list-unstyled mb-0">
                            <li><strong>Email:</strong> <a href="mailto:support@example.tld">support@example.tld</a></li>
                            <li><strong>Hours:</strong> Mon–Fri, 09:00–18:00</li>
                            <li><strong>Avg. response:</strong> within 1 business day</li>
                          </ul>
                        </div>
                      </div>

                      <div class="col-12 col-md-6">
                        <div class="border rounded p-3 h-100">
                          <h6 class="mb-2">Billing</h6>
                          <ul class="list-unstyled mb-0">
                            <li><strong>Email:</strong> <a href="mailto:billing@example.tld">billing@example.tld</a></li>
                            <li><strong>Hours:</strong> Mon–Fri, 09:00–18:00</li>
                          </ul>
                        </div>
                      </div>

                      <div class="col-12 col-md-6">
                        <div class="border rounded p-3 h-100">
                          <h6 class="mb-2">Transfers & Escalations</h6>
                          <ul class="list-unstyled mb-0">
                            <li><strong>Email:</strong> <a href="mailto:transfers@example.tld">transfers@example.tld</a></li>
                            <li><strong>Escalation:</strong> <a href="mailto:escalations@example.tld">escalations@example.tld</a></li>
                          </ul>
                        </div>
                      </div>

                      <div class="col-12 col-md-6">
                        <div class="border rounded p-3 h-100">
                          <h6 class="mb-2">Legal Notices</h6>
                          <ul class="list-unstyled mb-0">
                            <li><strong>Email:</strong> <a href="mailto:legal@example.tld">legal@example.tld</a></li>
                            <li><strong>LEA hotline (priority):</strong> +1-234-567-0000</li>
                          </ul>
                        </div>
                      </div>
                    </div>

                    <hr class="my-4">

                    <h6 class="mb-2">Company Details</h6>
                    <div class="table-responsive">
                      <table class="table table-sm mb-0">
                        <tbody>
                          <tr><td class="text-muted">Legal name</td><td><strong>Example Registrar Ltd.</strong></td></tr>
                          <tr><td class="text-muted">IANA ID</td><td><strong>1234</strong></td></tr>
                          <tr><td class="text-muted">Registered address</td><td>123 Example Street, Suite 456, City, Country</td></tr>
                          <tr><td class="text-muted">Company number</td><td>REG-00000000</td></tr>
                          <tr><td class="text-muted">CEO</td><td>Firstname Lastname</td></tr>
                          <tr><td class="text-muted">Primary phone</td><td>+1-234-567-8901</td></tr>
                          <tr><td class="text-muted">Data protection contact</td><td><a href="mailto:privacy@example.tld">privacy@example.tld</a></td></tr>
                        </tbody>
                      </table>
                    </div>

                    <p class="small text-muted mt-3 mb-0">
                      Note: Do not send payment cards or sensitive documents by email. We will never ask for your password.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          
          <div class="text-center mt-5">
            <div class="alert alert-info alert-dismissible mt-4" role="alert">
               <div class="alert-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" /><path d="M12 9h.01" /><path d="M11 12h1v4h1" />        </svg>
               </div>
                 <h4 class="alert-title">To customize this page, copy <code>contact.twig</code> from <code>resources/views</code> to <code>contact.custom.twig</code> and edit the file as required.</h4>
                 <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
            </div>
          </div>
        </div>
    </main>

  <footer class="footer bg-white border-top shadow-sm py-3 mt-auto">
    <div class="container-xl d-flex flex-column flex-md-row align-items-center justify-content-center justify-content-md-between text-center text-md-start gap-2">
      <span class="text-muted">&copy; {{ 'now' | date('Y') }}. All rights reserved.</span>
      <div class="mt-2 mt-md-0">
        <a href="{{ route('terms') }}" class="text-muted me-3">Terms & Conditions</a>
        <a href="{{ route('privacy') }}" class="text-muted me-3">Privacy Policy</a>
        <a href="{{ route('reportabuse') }}" class="text-muted">Report Abuse</a>
      </div>
    </div>
  </footer>

  {% include 'partials/js.twig' %}
</body>
</html>