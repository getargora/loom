                    </li>
                    <li class="breadcrumb-item">
                      <a href="{{route('invoices')}}">{{ __('Invoices') }}</a>
                    </li>
                    <li class="breadcrumb-item active">
                      {{ __('Pay Invoice') }} {{ invoice_details.invoice_number }}
                    </li>
                  </ol>
                </div>
                <h2 class="page-title">
                  {{ __('Pay Invoice') }} {{ invoice_details.invoice_number }}
                </h2>
              </div>
            </div>
