<!doctype html>
<html lang="{{ _lang ?: 'en' }}" dir="{{ _lang in ['ar', 'ar_SA'] ? 'rtl' : 'ltr' }}"{% if screen_mode == 'dark' %} data-bs-theme="dark"{% endif %}{% if theme is not defined or theme is empty %} data-bs-theme-primary="purple"{% else %} data-bs-theme-primary="{{ theme }}"{% endif %}>
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover"/>
    <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
    <title>{% block title %}{% endblock %} | Loom</title>
    <meta name="theme-color" content="#5B099B">
    <!-- CSS files -->
    {% include 'partials/css.twig' %}
    <style>
      @import url('/assets/fonts/inter/inter.css');
      :root {
          --tblr-font-sans-serif: "Inter", -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif;
      }
      @supports (font-variation-settings: normal) {
          :root {
              --tblr-font-sans-serif: "InterVariable", -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif;
              font-optical-sizing: auto;
          }
      }
    </style>
  </head>
  <body>
    {% block content %}{% endblock %}
    <!-- Libs JS -->
    {% include 'partials/js.twig' %}
  </body>
</html>